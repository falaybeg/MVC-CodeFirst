@model IEnumerable<EntityFrameworkExample.Models.Category>

@{
    ViewBag.Title = "List Category";
}
<center>
    <h2 style="background-color: dimgray; color:white">Category List</h2>
</center><hr />

<a href="@Url.Action("AddCategory","Home")" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>

            </tr>
        }
    </tbody>
</table>
